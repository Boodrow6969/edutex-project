// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

// User and Authentication Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  workspaces    WorkspaceMember[]
  createdPages  Page[]
  createdTasks  Task[]
  assignedTasks Task[]    @relation("TaskAssignee")
  createdTokens       StakeholderAccessToken[] @relation("TokenCreator")
  reviewedSubmissions StakeholderSubmission[]  @relation("SubmissionReviewer")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Core EduTex Models
model Workspace {
  id          String   @id @default(cuid())
  name        String
  description String?
  stakeholders Json?   @default("[]")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members   WorkspaceMember[]
  courses   Course[]
  curricula Curriculum[]
  stakeholderTokens      StakeholderAccessToken[]
  stakeholderSubmissions StakeholderSubmission[]

  @@map("workspaces")
}

model WorkspaceMember {
  id          String        @id @default(cuid())
  role        WorkspaceRole @default(DESIGNER)
  workspaceId String
  userId      String
  createdAt   DateTime      @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@map("workspace_members")
}

enum WorkspaceRole {
  ADMINISTRATOR
  MANAGER
  DESIGNER
  FACILITATOR
  SME
}

model Course {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      String   @default("draft")
  clientName  String?
  courseType   String?    // was projectType
  phase       String   @default("intake")
  priority    String   @default("medium")
  targetGoLive DateTime?
  workspaceId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace    Workspace?         @relation(fields: [workspaceId], references: [id], onDelete: SetNull)
  pages        Page[]
  tasks        Task[]
  objectives   Objective[]
  deliverables Deliverable[]
  blueprints   LearningBlueprint[]
  curricula    CurriculumCourse[]

  @@map("courses")
}

model Curriculum {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text

  // Program metadata
  status              String  @default("draft") // draft, in_progress, published
  programDuration     String? // e.g., "12 weeks", "6 months"
  totalHours          Int?
  certificationName   String?
  audienceProgression String? @db.Text // e.g., "Beginner → Intermediate → Advanced"

  // Workspace relationship
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: SetNull)

  // Curriculum has its own pages (program-level analysis)
  pages Page[]

  // Many-to-many with Courses via join table
  courses CurriculumCourse[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("curricula")
}

model CurriculumCourse {
  id           String     @id @default(cuid())
  curriculumId String
  curriculum   Curriculum @relation(fields: [curriculumId], references: [id], onDelete: Cascade)
  courseId      String
  course        Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)

  order Int @default(0) // Sequence within curriculum

  createdAt DateTime @default(now())

  @@unique([curriculumId, courseId])
  @@map("curriculum_courses")
}

model Page {
  id          String   @id @default(cuid())
  title       String
  type        PageType @default(CUSTOM)
  courseId     String?  // Optional: page belongs to either Course OR Curriculum
  curriculumId String? // Optional: page belongs to either Course OR Curriculum
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  order       Int      @default(0)

  course        Course?        @relation(fields: [courseId], references: [id], onDelete: Cascade)
  curriculum    Curriculum?    @relation(fields: [curriculumId], references: [id], onDelete: Cascade)
  createdBy     User           @relation(fields: [createdById], references: [id])
  blocks        Block[]
  needsAnalysis NeedsAnalysis?
  taskAnalysis  TaskAnalysis?
  storyboard    Storyboard?

  @@map("pages")
}

model NeedsAnalysis {
  id        String @id @default(cuid())
  pageId    String @unique
  page      Page   @relation(fields: [pageId], references: [id], onDelete: Cascade)

  // Problem tab
  problemStatement String   @default("")
  businessNeed     String   @default("")
  department       String   @default("")
  constraints      String[] @default([])
  assumptions      String[] @default([])

  // Stakeholders tab
  learnerPersonas String[] @default([])
  stakeholders    String[] @default([])
  smes            String[] @default([])

  // Performance tab
  currentState String @default("")
  desiredState String @default("")

  // Success Metrics tab
  level1Reaction String @default("")
  level2Learning String @default("")
  level3Behavior String @default("")
  level4Results  String @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("needs_analyses")
}

model TaskAnalysis {
  id        String @id @default(cuid())
  pageId    String @unique
  page      Page   @relation(fields: [pageId], references: [id], onDelete: Cascade)

  // Job/Role Context
  jobTitle        String @default("")
  roleDescription String @default("") @db.Text

  // Tasks stored as JSON (array of TaskItem objects)
  tasks Json @default("[]")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("task_analyses")
}

model Storyboard {
  id     String @id @default(cuid())
  pageId String @unique
  page   Page   @relation(fields: [pageId], references: [id], onDelete: Cascade)

  // Page-level metadata
  targetAudience     String   @default("")
  status             String   @default("draft") // draft | review | approved
  linkedObjectiveIds String[] @default([])
  version            Int      @default(1)

  // Course information header fields
  title           String @default("")
  duration        String @default("")
  deliveryMethod  String @default("eLearning")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("storyboards")
}

enum PageType {
  // Course-level pages
  CUSTOM
  NEEDS_ANALYSIS
  TASK_ANALYSIS
  AUDIENCE_PROFILE
  LEARNING_OBJECTIVES
  ASSESSMENT_PLAN
  STORYBOARD
  CURRICULUM_MAP
  // Program/Curriculum-level pages
  PROGRAM_NEEDS_ANALYSIS
  PROGRAM_MAP
  PROGRAM_ASSESSMENT_STRATEGY
  PROGRAM_EVALUATION
}

model Block {
  id        String    @id @default(cuid())
  type      BlockType
  content   Json
  pageId    String
  order     Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@map("blocks")
}

enum BlockType {
  // Basic text blocks
  PARAGRAPH
  HEADING_1
  HEADING_2
  HEADING_3
  BULLETED_LIST
  NUMBERED_LIST
  CALLOUT

  // Instructional design blocks (existing)
  PERFORMANCE_PROBLEM
  INSTRUCTIONAL_GOAL
  TASK_STEP
  LEARNING_OBJECTIVE
  ASSESSMENT_IDEA

  // Legacy storyboard (to be migrated in M4)
  STORYBOARD_FRAME

  // Storyboard blocks (Milestone 2)
  STORYBOARD_METADATA
  CONTENT_SCREEN

  // Storyboard blocks (Milestone 3)
  LEARNING_OBJECTIVES_IMPORT
  CHECKLIST
  TABLE
  FACILITATOR_NOTES
  MATERIALS_LIST

  // Media blocks (Milestone 2.5)
  IMAGE
  VIDEO
}

model Task {
  id            String     @id @default(cuid())
  title         String
  description   String?
  status        TaskStatus @default(TODO)
  priority      Priority   @default(MEDIUM)
  courseId       String
  createdById   String
  assignedToId  String?
  dueDate       DateTime?
  deliverableId String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  course       Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  createdBy    User         @relation(fields: [createdById], references: [id])
  assignedTo   User?        @relation("TaskAssignee", fields: [assignedToId], references: [id])
  deliverable  Deliverable? @relation(fields: [deliverableId], references: [id])

  @@map("tasks")
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  DONE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model Objective {
  id          String     @id @default(cuid())
  title       String
  description String     @db.Text
  bloomLevel  BloomLevel
  courseId     String
  tags        String[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("objectives")
}

enum BloomLevel {
  REMEMBER
  UNDERSTAND
  APPLY
  ANALYZE
  EVALUATE
  CREATE
}

model Deliverable {
  id          String             @id @default(cuid())
  title       String
  description String?
  type        DeliverableType
  status      DeliverableStatus  @default(PLANNED)
  courseId     String
  dueDate     DateTime?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  course  Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  tasks   Task[]

  @@map("deliverables")
}

enum DeliverableType {
  COURSE
  MODULE
  JOB_AID
  REFERENCE_GUIDE
  FACILITATOR_GUIDE
  PARTICIPANT_GUIDE
  NARRATION_SCRIPT
  ASSESSMENT
  STORYBOARD
  OTHER
}

enum DeliverableStatus {
  PLANNED
  IN_PROGRESS
  REVIEW
  APPROVED
  DELIVERED
}

// LearningBlueprint Models
model LearningBlueprint {
  id              String   @id @default(uuid())
  courseId         String
  title           String
  audience        String
  deliveryMode    String
  timeBudgetMinutes Int
  status          String   @default("draft")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  course            Course             @relation(fields: [courseId], references: [id], onDelete: Cascade)
  performanceNeeds PerformanceNeed[]
  objectives       BlueprintObjective[]
  constraints      Constraint[]
  activityInstances ActivityInstance[]

  @@map("learning_blueprints")
}

model PerformanceNeed {
  id              String   @id @default(uuid())
  blueprintId     String
  problemStatement String  @db.Text
  desiredBehavior String   @db.Text
  consequences    String   @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  blueprint LearningBlueprint @relation(fields: [blueprintId], references: [id], onDelete: Cascade)

  @@map("performance_needs")
}

// Blueprint-level Objective (separate from Course-level Objective)
model BlueprintObjective {
  id                String   @id @default(uuid())
  blueprintId       String
  text              String   @db.Text
  bloomLevel        String
  priority          String
  requiresAssessment Boolean
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  blueprint         LearningBlueprint @relation(fields: [blueprintId], references: [id], onDelete: Cascade)
  activityInstances ActivityInstance[]

  @@map("blueprint_objectives")
}

model Constraint {
  id          String   @id @default(uuid())
  blueprintId String
  type        String
  description String   @db.Text
  value       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  blueprint LearningBlueprint @relation(fields: [blueprintId], references: [id], onDelete: Cascade)

  @@map("constraints")
}

model ActivityPattern {
  id                   String   @id @default(uuid())
  name                 String
  description          String   @db.Text
  bestForBloomLevels   String
  references           String?  @db.Text
  typicalDurationMinutes Int?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  activityInstances ActivityInstance[]

  @@map("activity_patterns")
}

model ActivityInstance {
  id            String   @id @default(uuid())
  blueprintId   String
  objectiveId   String
  patternId     String
  positionIndex Int
  notes         String?  @db.Text
  learnerDeliverable String? @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  blueprint LearningBlueprint @relation(fields: [blueprintId], references: [id], onDelete: Cascade)
  objective BlueprintObjective @relation(fields: [objectiveId], references: [id], onDelete: Cascade)
  pattern   ActivityPattern @relation(fields: [patternId], references: [id], onDelete: Cascade)

  @@map("activity_instances")
}

// Stakeholder Needs Analysis Models
enum TrainingType {
  PERFORMANCE_PROBLEM
  NEW_SYSTEM
  COMPLIANCE
  ROLE_CHANGE
}

enum SubmissionStatus {
  DRAFT
  SUBMITTED
  UNDER_REVIEW
  APPROVED
  REVISION_REQUESTED
}

model StakeholderAccessToken {
  id               String    @id @default(cuid())
  token            String    @unique @default(cuid())
  workspaceId      String
  workspace        Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  trainingType     TrainingType
  createdById      String
  createdBy        User      @relation("TokenCreator", fields: [createdById], references: [id])
  isActive         Boolean   @default(true)
  expiresAt        DateTime?
  stakeholderName  String?
  stakeholderEmail String?
  submission       StakeholderSubmission?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([token])
  @@index([workspaceId])
  @@map("stakeholder_access_tokens")
}

model StakeholderSubmission {
  id             String           @id @default(cuid())
  tokenId        String           @unique
  token          StakeholderAccessToken @relation(fields: [tokenId], references: [id], onDelete: Cascade)
  workspaceId    String
  workspace      Workspace        @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  trainingType   TrainingType
  status         SubmissionStatus @default(DRAFT)
  submittedAt    DateTime?
  reviewedAt     DateTime?
  reviewedById   String?
  reviewedBy     User?            @relation("SubmissionReviewer", fields: [reviewedById], references: [id])
  revisionNotes  String?          @db.Text
  responses      StakeholderResponse[]
  changeLogs     StakeholderChangeLog[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@index([workspaceId])
  @@index([status])
  @@map("stakeholder_submissions")
}

model StakeholderResponse {
  id           String    @id @default(cuid())
  submissionId String
  submission   StakeholderSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  questionId   String
  value        String    @db.Text
  updatedBy    String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([submissionId, questionId])
  @@index([submissionId])
  @@map("stakeholder_responses")
}

model StakeholderChangeLog {
  id            String    @id @default(cuid())
  submissionId  String
  submission    StakeholderSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  questionId    String
  changedBy     String
  previousValue String?   @db.Text
  newValue      String    @db.Text
  changedAt     DateTime  @default(now())

  @@index([submissionId])
  @@index([submissionId, questionId])
  @@map("stakeholder_change_logs")
}
